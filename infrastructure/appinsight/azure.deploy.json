{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "apiProfile": "2018-06-01-profile",
    "metadata": {
        "comments": "Deploy a shared application insight",
        "author": "Ping Dong"
    },
    "parameters": {
        "environment": {
            "type": "string",
            "metadata": {
                "description": "The name of the environment"
            }
        },
        "project": {
            "type": "string",
            "defaultValue": "newmoon"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        }
    },
    "variables": {
        "tags": {
            "project": "[parameters('project')]",
            "environment": "[parameters('environment')]"
        },
        "resource-name": "[concat(parameters('project'),'-',parameters('environment'),'-ai')]"
    },
    "functions": [],
    "resources": [
        {
            "type": "microsoft.insights/components",
            "apiVersion": "[providers('microsoft.insights','components').apiVersions[0]]",
            "name": "[variables('resource-name')]",
            "location": "[parameters('location')]",
            "tags": "[variables('tags')]",
            "properties": {
                "ApplicationId": "[variables('resource-name')]"
            }
        }
    ],
    "outputs": {
        "AppInsightsInstrumentationKey": {
            "type": "string",
            "value": "[reference(variables('resource-name')).InstrumentationKey]"            
        }
    }
}